        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_view_normal_subtitle_size</item>
    </style>

    <style name="Theme.MercadoLibreLite.TextView.Content">
        <item name="android:textAppearance">@style/TextAppearance.MercadoLibreLite.TextView.Content</item>
    </style>

    <style name="TextAppearance.MercadoLibreLite.TextView.Content">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
