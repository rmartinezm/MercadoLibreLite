<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph_main"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="cs.roberto.mercadolibrelite.presentation.splash.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="cs.roberto.mercadolibrelite.presentation.search.SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_productsFragment"
            app:destination="@id/productsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/productsFragment"
        android:name="cs.roberto.mercadolibrelite.presentation.products.ProductsFragment"
        tools:layout="@layout/fragment_products">
        <argument
            android:name="query"
            app:argType="string" />
        <action
            android:id="@+id/action_productsFragment_to_productDetailsActivity"
            app:destination="@id/productDetailsActivity"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <activity
        android:id="@+id/productDetailsActivity"
        android:name="cs.roberto.mercadolibrelite.presentation.product_details.ProductDetailsActivity"
        tools:layout="@layout/activity_product_details">
        <argument
            android:name="itemId"
            app:argType="string" />
    </activity>

</navigation>